<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.zzh.zhbj.view.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_tab_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/rb_tab_home_selector"
            android:gravity="center"
            android:padding="8dip"
            android:text="首页"
            android:textColor="@drawable/rb_tab_text_color_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_newscenter"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/rb_tab_newcenter_selector"
            android:gravity="center"
            android:padding="8dip"
            android:text="新闻中心"
            android:textColor="@drawable/rb_tab_text_color_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_smartservice"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/rb_tab_smrtserv_selector"
            android:gravity="center"
            android:padding="8dip"
            android:text="智慧服务"
            android:textColor="@drawable/rb_tab_text_color_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_goverment"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/rb_tab_gov_selector"
            android:gravity="center"
            android:padding="8dip"
            android:text="政务"
            android:textColor="@drawable/rb_tab_text_color_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_setting"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/rb_tab_setting_selector"
            android:gravity="center"
            android:padding="8dip"
            android:text="设置"
            android:textColor="@drawable/rb_tab_text_color_selector"
            android:textSize="12sp" />
    </RadioGroup>

</LinearLayout>