<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:visibility="invisible"
        android:id="@+id/btn_guide_activity_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:background="@drawable/btn_guide_activity_selector"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:text="开始体验"
        android:textColor="@drawable/btn_text_guide_activity_selector" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" >

        <LinearLayout
            android:id="@+id/ll_point_group_guide_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>

        <View
            android:id="@+id/vw_read_point_guide"
            android:layout_width="10px"
            android:layout_height="10px" 
            android:background="@drawable/point_red_guide_activity_shape"/>
    </RelativeLayout>

</RelativeLayout>